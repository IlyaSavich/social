{
  "compileOnSave": false,
  "compilerOptions": {
    "baseUrl": "./src/",
    "importHelpers": true,
    "isolatedModules": true,
    "lib": ["dom", "es2020"],
    "module": "es6",
    "moduleResolution": "node",
    "sourceMap": true,
    "strict": true,
    "target": "es2020",
    "jsx": "react",
    "noFallthroughCasesInSwitch": true, // check with lint
    "noImplicitReturns": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true
  }
}
